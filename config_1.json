{
  "GarageDoorPi": {
    "name": "garage door monitor",
    "database_path": "/home/bjc/gdoor/exe/garage.db",
    "door_state_table": "door_state",
    "sensor_table": "readings",
    "digital_io": [
       { 
         "type": "input",
         "name": "up_position", 
         "pin": 23
       },
       { 
         "type": "input",
         "name": "down_position", 
         "pin": 24
